[module/uptime]
type = custom/script

interval = 1
format-margin = 0

exec = uptime | awk '{print $3}' | sed 's/,//g'

format-prefix = " "
format-prefix-font = 1
format-prefix-foreground = ${color.standpref}
format-prefix-background = #b6a

label = %output%
label-foreground = ${color.standpref}
label-background = #b6a
label-padding = 1

