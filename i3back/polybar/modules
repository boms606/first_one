icon-0 = 1: ;
icon-1 = 2: ;
icon-2 = 3: ;
icon-3 = 4: ;
icon-4 = 5: ;
icon-5 = 6: ;
icon-6 = 7: ;
icon-7 = 8: ;
icon-8 = 9: ;
icon-9 = 10:win;
icon-default = 

;icon-1 = 2: ; 
;icon-2 = 3: ; 
;icon-3 = 4: ; 
;icon-4 = 5: ; 
;icon-5 = 6: ; 
;icon-6 = 7: ; 漣

format = <label-state>

label-monitor = %name%

label-active = %icon%
